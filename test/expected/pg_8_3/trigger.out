CREATE OR REPLACE FUNCTION stop_event()
RETURNS TRIGGER LANGUAGE python AS
$python$
from Postgres import StopEvent
def f(*args):
	raise StopEvent()
before_insert = before_delete = before_update = f
after_insert = after_delete = after_update = f
