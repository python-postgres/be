CREATE OR REPLACE FUNCTION srcount(i int, j int) RETURNS int LANGUAGE python AS
$python$
from Postgres import Stateful

@Stateful
def main(i, j):
	k = 0
	while True:
		k = k + 1
		i, j = (yield i + j + k)
$python$;
